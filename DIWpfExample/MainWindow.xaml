<Window x:Class="DIWpfExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DI + MVVM" Height="200" Width="300">
    <StackPanel Margin="20">
        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
        <Button Content="Begrüßen" Command="{Binding GreetCommand}" Margin="0,10,0,0"/>
        <TextBlock Text="{Binding Greeting}" FontWeight="Bold" Margin="0,10,0,0"/>
    </StackPanel>
</Window>

